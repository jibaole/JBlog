<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">

    <!-- 过滤无需装饰的元素 -->
    <excludes>
        <pattern>/static/**</pattern>
        <pattern>/login</pattern>
        <pattern>/admin/file/upload-single*</pattern>
        <pattern>/admin/file/show/**</pattern>
    </excludes>

    <!-- 前端首页装饰 -->
    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
        <pattern>/article/**</pattern>
    </decorator>

    <!-- 后台控制管理页装饰 -->
    <decorator name="dashboard" page="dashboard.jsp">
        <pattern>/admin/*</pattern>
    </decorator>

</decorators>
